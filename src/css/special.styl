@import 'mq'
@import 'functions'
@import 'keyframes'

$colors = {
  main: #3575F1,
  grey: #B8B8B8
}

.skyeng
  position: relative
  z-index: 99
  width: 1030px
  max-width: 100%
  font-family: Roboto, sans-serif
  font-size: 16px
  line-height: normal
  text-size-adjust: 100%
  border-radius: 5px
  background-color: #fff
  box-shadow: 0 0 20px rgba(0,0,0,.2)
  overflow: hidden

  &__titlebar
    display: flex
    align-items: center
    width: 100%
    height: 30px
    border-bottom: 2px solid #D0D0D0
    background-color: #E6E5E6
    background: linear-gradient(to top, #DDDCDD, #E6E5E6)

    & > div
      display: flex
      align-items: center

      & > div
        width: 13px
        height: 13px
        border-radius: 100%
        margin-left: 10px

        &:nth-child(1)
          background-color: #FF5E5C

        &:nth-child(2)
          background-color: #FFBC4C

        &:nth-child(3)
          background-color: #00CB57

  &__body
    position: relative
    min-height: 600px
    width: 870px
    max-width: 100%
    margin: 60px auto 0

  &__pages
    position: absolute
    top: 10px
    right: 0
    color: $colors.grey
    font-size: 20px
    font-weight: 500

  &-msg
    position: relative
    padding: 0 90px

    &:not(:last-child)
      margin-bottom: 100px

    &__avatar
      position: absolute
      top: 0
      left: 0
      width: 62px
      height: 62px
      border-radius: 100%
      background-color: #E6E6E6

      & > svg
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        margin: auto
        width: 30px
        height: 30px
        fill: $colors.grey

      &--logo
        background-color: $colors.main

        & > svg
          width: 48px
          height: 14px
          fill: #fff

    &__from
    &__to
      color: $colors.grey
      font-weight: 500

      & > span
        margin-right: 8px

    &__from
      padding-top: 10px
      margin-bottom: 6px

      & > span
        color: #000
        font-size: 20px

    &__text
      margin-top: 28px
      font-size: 25px
      font-weight: 500
      line-height: 1.3em

      &.is-correct
        color: #46E25F

      &.is-incorrect
        color: #FB6868

    &__title
      position: absolute
      top: -36px
      color: $colors.grey

    &__form
      display: flex
      align-items: flex-start
      flex-direction: column
      min-height: 200px
      padding: 18px 16px
      border: 1px solid $colors.grey

    &__option
      padding: 10px 14px
      font-size: 20px
      font-weight: 500
      border: 2px solid $colors.grey
      user-select: none
      cursor: pointer
      transition: opacity .2s

      &:hover
        opacity: .4

      @media $mq.notHover
        opacity: 1

      &.is-selected
        color: $colors.main
        border-color: currentColor
        opacity: 1
        cursor: default

      &:not(:last-child)
        margin-bottom: 8px

    &__btn
      min-width: 160px
      height: 48px
      margin: 22px 0 0
      padding: 0
      color: #fff
      font-family: inherit
      font-size: inherit
      font-weight: 500
      border: none
      outline: none
      background-color: $colors.main
      cursor: pointer
      transition: opacity .2s

      &:hover
        opacity: .8

      @media $mq.notHover
        opacity: 1

      &--next
        margin-top: 68px
        color: $colors.main
        border: 2px solid currentColor
        background-color: #fff
